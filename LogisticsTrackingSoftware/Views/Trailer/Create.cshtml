@model LogisticsManagement.Data.Trailer

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
       
<div class="row">
    <div class="col-md-8 offset-1 ">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"> Add Trailer Details</p>
            </div>
            <hr />
        <form method="Post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 col">
                <label asp-for="Year" class="control-label"></label>
                <select asp-for="Year" class="form-select" asp-items ="@(new SelectList(ViewBag.YearList, "", ""))"></select>
                <option></option>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Make" class="control-label"></label>
                <select asp-for ="Make" class = "form-select" asp-items ="@(new SelectList(ViewBag.TrailerMakeList, "", ""))">
                    <option disabled selected>--Select Make--</option>
                </select>
            </div>
           
            <div class="form-group mb-3">
                <label asp-for="TrailerType" class="control-label"></label>
                <select asp-for="TrailerType" class="form-select" asp-items="Html.GetEnumSelectList<TrailerType>()">
                    <option disabled selected>--Select Trailer Type--</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EquipmentNumber" class="control-label"></label>
                <input asp-for="EquipmentNumber" class="form-control" />
                <span asp-validation-for="EquipmentNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="VinNumber" class="control-label"></label>
                <input asp-for="VinNumber" class="form-control" />
                <span asp-validation-for="VinNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LicensePlateNumber" class="control-label"></label>
                <input asp-for="LicensePlateNumber" class="form-control" />
                <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
