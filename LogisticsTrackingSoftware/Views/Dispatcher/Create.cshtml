@model LogisticsManagement.Data.Dispatcher

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
       
<div class="row">
    <div class="col-md-8 offset-1 ">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"> Add Dispatcher Details</p>
            </div>
            <hr />
        <form method="Post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 col">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="DispatchFee" class="control-label"></label>
                <input asp-for="DispatchFee" class="form-control" />
                <span asp-validation-for="DispatchFee" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}


