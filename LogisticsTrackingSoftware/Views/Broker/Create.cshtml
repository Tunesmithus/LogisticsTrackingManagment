@model LogisticsManagement.Data.Broker

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
       
<div class="row">
    <div class="col-md-8 offset-1 ">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"> Add Broker Details</p>
            </div>
            <hr />
        <form method="Post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 col-5">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
           <div class="form-group mb-3 col-6">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="State" class="control-label"></label>
                <select asp-for ="State" class = "form-select" asp-items ="@(new SelectList(ViewBag.StateList, "", ""))">
                    <option disabled selected>--Select State--</option>
                </select>
            </div>
            
            <div class="form-group mb-3 col-3">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
