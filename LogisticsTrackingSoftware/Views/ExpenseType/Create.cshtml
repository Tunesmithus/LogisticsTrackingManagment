@using LogisticsManagement.Common.StaticUtility
@model LogisticsManagement.Data.ExpenseType

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
       
<div class="row">
    <div class="col-md-8 offset-1 ">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Add Expense</b></p>
            </div>
            <hr />
        <form method="Post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 col-5">
                <label asp-for="ExpenseCategory" class="control-label"></label>
                <input asp-for="ExpenseCategory" class="form-control" />
                <span asp-validation-for="ExpenseCategory" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                 @{
                     if (User.IsInRole(StaticDetail.Role_Administrator))
                        {
                            <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
                        }
                 }
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
