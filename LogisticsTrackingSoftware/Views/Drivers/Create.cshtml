@model LogisticsManagement.Data.Driver

@{
    ViewData["Title"] = "Create";
}

 <h2 class="mt-3">Add Driver</h2>
 <hr />
 <a class="text-danger" asp-action="Index"><i class="bi bi-caret-left-fill"></i>Back To List</a>
 

<div class="container">
<div class="row">
    <div class="col-md-12">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Driver Details</b></p>
            </div>
      
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="offset-1">
            <div class="form-group  mb-3 col-4">
                <label asp-for="FirstName" class="control-label fw-bold"><span class="text-danger">*</span>First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="LastName" class="control-label fw-bold"><span class="text-danger">*</span>Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6 ">
                <label asp-for="Email" class="control-label fw-bold"><span class="text-danger">*</span>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="PhoneNumber" class="control-label fw-bold"><span class="text-danger">*</span>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="DateOfBirth" class="control-label fw-bold"><span class="text-danger">*</span>Date Of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="ApplicationDate" class="control-label fw-bold"><span class="text-danger">*</span>Application Date</label>
                <input asp-for="ApplicationDate" type="date" class="form-control" />
                <span asp-validation-for="ApplicationDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="HireDate" class="control-label fw-bold"><span class="text-danger">*</span>Hire Date</label>
                <input asp-for="HireDate" type="date" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="EmergencyContact" class="control-label fw-bold"><span class="text-danger">*</span>EmergencyContact</label>
                <input asp-for="EmergencyContact" class="form-control" />
                <span asp-validation-for="EmergencyContact" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="EmergencyContactPhone" class="control-label fw-bold"><span class="text-danger">*</span>Emergency Contact Phone</label>
                <input asp-for="EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>
            </div>
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Address</b></p>
            </div>
            <hr />
            <div class="offset-1">
            <div class="form-group mb-3 col-6">
                <label asp-for="StreetAddress" class="control-label fw-bold"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="City" class="control-label fw-bold"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="State" class="control-label fw-bold"></label>
                <select asp-for ="State" class = "form-select" asp-items ="@(new SelectList(ViewBag.StateList, "", ""))">
                    <option disabled selected>--Select State--</option>
                </select>
            </div>
            <div class="form-group mb-3 col-2">
                <label asp-for="ZipCode" class="control-label fw-bold"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <br />  
            </div>
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Driver Pay</b></p>
            </div>
            <hr />
            <div class="offset-1">

            <div class="form-group mb-3 col-3">
                <label asp-for="DriverPay" class="control-label fw-bold"><span class="text-danger">*</span>Pay</label>
                <input asp-for="DriverPay" class="form-control" />
                <span asp-validation-for="DriverPay" class="text-danger"></span>
            </div>
            
            <br />  
            </div>
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Notes</b></p>
            </div>
            <hr />
            <div class="offset-1">

            <div class="form-group mb-3 col-6">
                <label asp-for="DriverNotes" class="control-label fw-bold"></label>
                <textarea asp-for="DriverNotes" class="form-control"></textarea>
                <span asp-validation-for="DriverNotes" class="text-danger"></span>
            </div>
            </div>
            <br />
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                 <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
