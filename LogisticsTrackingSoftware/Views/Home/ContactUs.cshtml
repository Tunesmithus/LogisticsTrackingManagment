@{
    ViewData["Title"] = "Contact Us";
}



<div class="text-center pt-2">
    <h1 class="text-secondary">Have a question about 360 Logistics?</h1>
    <h4 class="text-info">Call us at (888) 274-6053 or send an email:</h4>
</div>


<div class="container">
    <form>
        <div class="row">
            <div class="col-12">
                <label for="inputAddress" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="Full Name">
            </div>
            <div class="col-12">
                <label for="inputAddress2" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputAddress2">
            </div>
            <div class="col-12">
                <label for="inputAddress2" class="form-label">Your Message</label>
                <textarea type="text" class="form-control" style="height:150px" id="inputAddress2"></textarea>
            </div>
            <div class="col-12 mt-2">
                <button class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Back To List</a>
            </div>
        </div>
    </form>
</div>
