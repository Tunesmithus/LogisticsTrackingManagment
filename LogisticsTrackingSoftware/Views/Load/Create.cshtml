@model LogisticsManagement.Data.Load

@{
    ViewData["Title"] = "Create";
}

 <h2 class="mt-3">Add Trip</h2>

<div class="container">
       
<div class="row">
    <div class="col-md-12">
        <br />  
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white"> Trip Details</b></p>
            </div>
            <hr />
        <form method="Post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="offset-1">
                <div class="form-group mb-3 col-6">
                <label asp-for="BrokerId" class="control-label fw-bold"><span class="text-danger">*</span>Broker</label> 
                <a class="float-end" asp-action="Create" asp-controller="Broker"><i class="bi bi-plus-circle-fill"></i> Add Broker</a>
                <select asp-for ="BrokerId" class = "form-select" asp-items ="ViewBag.BrokerList">
                    <option disabled selected>--Select Broker--</option>
                </select>
                
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="LoadNumber" class="control-label fw-bold"><span class="text-danger">*</span>Load Number</label>
                <input asp-for="LoadNumber" class="form-control" />
                <span asp-validation-for="LoadNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-4">
                <label asp-for="StartDate" class="control-label fw-bold"><span class="text-danger">*</span>Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
           <div class="form-group mb-3 col-4">
                <label asp-for="EndDate" class="control-label fw-bold"><span class="text-danger">*</span>End Date</label>
                <input asp-for="EndDate" type = "date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-8">
                <label asp-for="DriverId" class="control-label fw-bold"><span class="text-danger">*</span>Driver</label>
                <select asp-for ="DriverId" class = "form-select" asp-items ="ViewBag.DriverList">
                    <option disabled selected>--Select Driver--</option>
                </select>
            </div>
            </div>
             <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Rig Details</b></p>
            </div>
            <hr />
            <div class="offset-1">
             <div class="form-group mb-3 col-8">
                <label asp-for="TruckId" class="control-label fw-bold"><span class="text-danger">*</span>Truck</label>
                <select asp-for ="TruckId" class = "form-select" asp-items ="ViewBag.TruckList">
                    <option disabled selected>--Select Truck--</option>
                </select>
            </div>
            <div class="form-group mb-3 col-8">
                <label asp-for="TrailerId" class="control-label fw-bold"><span class="text-danger">*</span>Trailer</label>
                <select asp-for ="TrailerId" class = "form-select" asp-items ="ViewBag.TrailerList">
                    <option disabled selected>--Select Trailer--</option>
                </select>
            </div>
            </div>
            <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Mileage</b><p>
            </div>
            <hr />
            <div class="offset-1">
            <div class="form-group mb-3 col-6">
                <label asp-for="LoadedMiles" class="control-label fw-bold"><span class="text-danger">*</span>Loaded Miles</label>
                <input asp-for="LoadedMiles" class="form-control" />
                <span asp-validation-for="LoadedMiles" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="UnloadedMiles" class="control-label fw-bold"></label>
                <input asp-for="UnloadedMiles" class="form-control" />
                <span asp-validation-for="UnloadedMiles" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="BobTailMiles" class="control-label fw-bold"></label>
                <input asp-for="BobTailMiles" class="form-control" />
                <span asp-validation-for="BobTailMiles" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="OtherMiles" class="control-label fw-bold"></label>
                <input asp-for="OtherMiles" class="form-control" />
                <span asp-validation-for="OtherMiles" class="text-danger"></span>
            </div>
            </div>
             <div class="bg-secondary round px-2 rounded">
                <p class="fs-5 py-2"><b class="text-white">Revenue Details</b></p>
            </div>
            <hr />
            <div class="offset-1">

            <div class="form-group mb-3 col-6">
                <label asp-for="DispatcherId" class="control-label fw-bold"><span class="text-danger">*</span>Dispatcher</label>
                <select asp-for ="DispatcherId" class = "form-select" asp-items ="ViewBag.DispatcherList">
                    <option><a asp-for ="Create" asp></a></option>
                    <option disabled selected>--Select Dispatcher--</option>
                </select>
            </div>
            
            <div class="form-group mb-3 col-6">
                <label asp-for="LoadPay" class="control-label fw-bold"><span class="text-danger">*</span>Load Pay</label>
                <input asp-for="LoadPay" class="form-control" />
                <span asp-validation-for="LoadPay" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label asp-for="CargoWeight" class="control-label fw-bold"></label>
                <input asp-for="CargoWeight" class="form-control" />
                <span asp-validation-for="CargoWeight" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-8">
                <label asp-for="CargoDescription" class="control-label fw-bold"></label>
                <textarea asp-for="CargoDescription" class="form-control"></textarea>
                <span asp-validation-for="CargoDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                 <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
            </div>
            
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}


